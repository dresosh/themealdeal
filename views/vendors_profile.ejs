
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-vendor"></span> Local</h3>

                <% if (vendor.local.email) { %>

                    <p>
                        <strong>id</strong>: <%= vendor._id %><br>
                        <strong>email</strong>: <%= vendor.local.email %><br>
                        <strong>password</strong>: <%= vendor.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                        <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
