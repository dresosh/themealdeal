<div class="container">
  <div class="col-sm-12">
    <div class="panel panel-default">  
      <div class="panel-heading">Admin Page</div>
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Vendor Status</th>
              <th>Businessname</th>
              
              <th>Show </th>
              <th>Edit </th>
              <th>Save </th>
              <th>Delete</th>
            </tr>
          </thead>
            <tbody>
              <% for(var i=0; i < users.length; i++) {  %>
                <tr> 
                  <td><%= users[i].id %></td>       
                  <td><%= users[i].local.name %></td>
                  <td><%= users[i].local.email %></td>
                  <td><button type="text" id= "vendorchange_<%users[i].id%>" class="form-control" name="isvendor"><%= users[i].local.isvendor %></button></td>
                  <td><%= users[i].local.businessname %></td>
                  
                  <td>  <button type="button" class="btn" aria-label="Left Align"> 
                        <%- link_to('show', './users/'+users[i].id) %>
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>  
                  </td>
                  <td>  <button class="btn" aria-label="Left Align">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>

                        </button>  
                  </td>
                  <td>  <button type="button" class="btn" id= "saveuseredits_<%users[i].id%>"aria-label="Left Align">
                        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
                        </button>  
                  </td>


                  <td>  <button type="button" class="btn" id="deleteuser_<%users[i].id%>"aria-label="Left Align">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>

                        </button>  
                  </td>
                  <% } %>
                </tr>             
            </tbody>  
        </table>
      </div>
    </div>
  </div>
</div>
<%- include ./partials/vendorsignup.ejs%>