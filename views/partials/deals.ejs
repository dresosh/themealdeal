<div class="page-header text-user">
	<h1><span class="fa fa-cutlery"></span> The Best Deals in Town</h1>
</div>
	<div class="col-sm-6">
		<div class="well">
			<h3>The Meal Deals</h3>


				<% for(var i=0; i< deals.length; i++) {  %>
					<div class="meal-container"><!-- meal-container -->
						<ul class"meal-list">
						  <li><b>Name : </b> <%= deals[i].title %></li>
						  <li><b>Price : </b> <%= deals[i].price %></li>
						  <li><b>Start Date : </b> <%= deals[i].startdate %></li>
						  <li><b>End Date : </b> <%= deals[i].enddate %></li>
						  <% if (global.user) { %>
						  <li><%- link_to('show', 'deals/'+deals[i].id) %></li>
						  <% } %>
						</ul>
					</div><!-- meal-container -->
				<% } %>

		</div>
	</div>
